<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <per.goweii.codex.scanner.CodeScanner
        android:id="@+id/code_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <per.goweii.codex.decorator.finder.wechat.WeChatFinderView
        android:id="@+id/finder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:finderResultPointInnerColor="@color/colorPrimary"
        app:finderResultPointOuterColor="@color/colorPrimaryDark"
        app:finderScanLineColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_bookmark_bg"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/code_scanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>