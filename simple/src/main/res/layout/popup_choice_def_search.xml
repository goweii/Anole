<?xml version="1.0" encoding="utf-8"?>
<per.goweii.roundedshadowlayout.RoundedShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:roundedCornerRadius="?attr/dimenIconButtonSizeHalf"
    app:shadowColor="?attr/colorShadow"
    app:shadowOffsetY="?attr/dimenShadowOffsetY"
    app:shadowRadius="?attr/dimenShadowRadius"
    app:shadowSymmetry="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popup_choice_def_search_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:padding="?attr/dimenMarginThin"
        tools:ignore="SpeakableTextPresentCheck"
        tools:itemCount="3"
        tools:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/rv_item_choice_def_search"
        tools:orientation="vertical" />

</per.goweii.roundedshadowlayout.RoundedShadowLayout>