<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition_start_to_end"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300" />

    <Transition
        android:id="@+id/transition_end_to_start"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/end"
        motion:duration="300" />

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@+id/rl_windows"
            motion:layout_constraintStart_toEndOf="@+id/iv_back" />
        <Constraint
            android:id="@+id/iv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@+id/iv_home"
            motion:layout_constraintStart_toEndOf="@+id/rl_windows" />
        <Constraint
            android:id="@+id/rl_windows"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            motion:layout_constraintEnd_toStartOf="@+id/iv_menu"
            motion:layout_constraintStart_toEndOf="@+id/iv_forward" />
        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@+id/cv_count"
            motion:layout_constraintStart_toStartOf="@+id/cv_logo"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cv_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cv_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            motion:layout_constraintEnd_toStartOf="@+id/rl_windows"
            motion:layout_constraintStart_toEndOf="@+id/iv_back" />
        <Constraint
            android:id="@+id/iv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            motion:layout_constraintEnd_toStartOf="@+id/iv_home"
            motion:layout_constraintStart_toEndOf="@+id/rl_windows" />
        <Constraint
            android:id="@+id/rl_windows"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:visibility="invisible"
            motion:layout_constraintEnd_toStartOf="@+id/iv_menu"
            motion:layout_constraintStart_toEndOf="@+id/iv_forward" />
        <Constraint
            android:id="@+id/cv_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="?attr/dimenMarginHalf"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/iv_back"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/iv_home"
            motion:layout_constraintStart_toEndOf="@+id/iv_back"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cv_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="?attr/dimenMarginHalf"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/iv_home"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>